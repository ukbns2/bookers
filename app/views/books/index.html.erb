<h1>Bookers</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan = "3"></th>
  </tr>
 </thead>
 <% @books.each do |book| %>
  <tbody>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
  </tbody>
 <% end %>
</table>


<h2>New Book</h2>

<%= form_with model: @Book,url: '/books', method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>


<h1>Books#index</h1>
